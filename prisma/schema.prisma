datasource db {
  provider = "postgresql"
  url      = env("data_url")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(uuid())
  walletAddress String? @unique
  email        String?
  kycStatus    String?  @default("PENDING")
  createdAt    DateTime @default(now())
}

enum ListingType {
  BUY
  SELL
}

enum ListingStatus {
  ACTIVE
  PAUSED
  COMPLETED
}


model Listing {
  id              String        @id @default(uuid())

  /// Who created the ad
  userId          String

  /// BUY or SELL
  type            ListingType

  /// Crypto details
  cryptoSymbol    String        // e.g. BTC, USDT
  price           Decimal       // price per unit

  /// Limits
  minAmount       Decimal
  maxAmount       Decimal

  /// Total balance available (only meaningful for SELL)
  balance         Decimal

  /// Payment & timing
  paymentMethods  String[]      // ["UPI", "IMPS", "BANK"]
  maxTimeMinutes  Int           // order completion time
  status          ListingStatus @default(ACTIVE)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([type, cryptoSymbol, status])
}


model Order {
  id         String @id @default(uuid())
  listingId  String?
  amountCrypto Float?
  price      Float?
  fiatAmount Float?
  status     String?
  createdAt  DateTime @default(now())
}

model Transaction {
  id           String   @id @default(uuid())
  entity_type  String
  entity_id    String
  type         String
  amount_crypto Float
  metadata     Json
  created_at   DateTime @default(now())
}
